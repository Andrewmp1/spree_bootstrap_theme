<body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">

<header id="header" class="" data-hook>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <figure id="logo" class="" data-hook>
          <%= logo %>
        </figure>

        <nav id="top-nav-bar" class="">
          <ul id="nav-bar" class="inline" data-hook>
            <%= render :partial => 'spree/shared/nav_bar' %>
          </ul>
        </nav>

        <% if store_menu? %>
          <nav class="">
            <ul id="main-nav-bar" class="inline" data-hook>
              <%= render :partial => 'spree/shared/store_menu' %>
            </ul>
          </nav>
        <% end %>

      </div>
    </div>
  </div>
</header>

<div id="wrapper" class="" data-hook>
  <div class="container-fluid">
    <div class="row-fluid">
    <% if content_for?(:sidebar) %>
      <aside id="sidebar" class="span2" data-hook>
        <%= yield :sidebar %>
      </aside>
    <% end %>

    <div id="content" class="<% if !content_for?(:sidebar) %>span8<% else %>span10<% end %>" data-hook>
      <%= breadcrumbs(@taxon) %>
      <%= flash_messages %>
      <%= yield %>
    </div>
    </div>
  </div>
</div>

<footer id="footer" data-hook>
  <div class="container-fluid">
    <div id="footer-left" class="columns alpha eight" data-hook>
      <p><%= t(:powered_by) %> <%= link_to 'Spree', 'http://spreecommerce.com/' %></p>
    </div>
    <div id="footer-right" class="columns omega eight" data-hook></div>
  </div>
</footer>


</div>

<%= render :partial => 'spree/shared/google_analytics' %>

</body>